<div class="body">

<p id="notice"><%= notice %></p>
<div class="btn btn-info">
<%= search_form_for @q do |f| %>
  search by :
  <%= f.label :name_or_location_cont %>
  <%= f.search_field :name_or_location_cont %>
sort by
<%= sort_link(@q, :name) %>
  <%= f.submit %>
<% end %>
</div>

<h1>Restaurents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurents.each do |restaurent| %>
      <tr>
        <td><%= restaurent.name %></td>
        <td><%= restaurent.details %></td>
        <td><%= restaurent.location %></td>
        <td><%= link_to 'Show', restaurent  ,class: "btn btn-danger"%></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurent', new_restaurent_path  ,class: "btn btn-danger"%>
